pipeline {
    agent {
        docker {
            image 'golang:1.24'
        }
    }

    environment {
        GO111MODULE = "on" // Enable Go modules for dependency management
        GOPROXY = "direct" // Download direct from source
        SONAR_HOST_URL = "http://host.docker.internal:9000" // Access host's SonarQube
        SONAR_TOKEN = credentials('sonarqube-token') // Sonarqube's Jenkins credential
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'Using mounted project directory...'
                sh 'cp -r /workspace/aviation-weather/* ${WORKSPACE}/'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                    go version
                    go mod download
                    go mod verify
                '''
            }
        }

        stage('Run Tests') {
            steps {
                sh '''
                    echo "Running tests with coverage..."
                    go test ./... -v -coverprofile=coverage.out

                    echo "Generating coverage reports..."
                    go tool cover -html=coverage.out -o coverage.html
                '''
            }
        }

        stage('Golang Summary Reports') {
            steps {
                sh '''
                    echo "Generating golang summary reports..."
                    go tool cover -func=coverage.out | tee coverage.txt
                '''
            }
        }

        stage('SonarQube Analysis') {
            steps {
                sh '''
                    echo "Installing system dependencies..."
                    apt-get update -y
                    apt-get install -y wget unzip

                    echo "Installing SonarQube Scanner..."
                    rm -rf sonar-scanner-6.2.1.4610-linux-x64*
                    wget -q https://binaries.sonarsource.com/Distribution/sonar-scanner-cli/sonar-scanner-cli-6.2.1.4610-linux-x64.zip
                    unzip -oq sonar-scanner-cli-6.2.1.4610-linux-x64.zip

                    export PATH="$PWD/sonar-scanner-6.2.1.4610-linux-x64/bin:$PATH"

                    echo "Running SonarQube analysis..."
                    sonar-scanner \
                    -Dsonar.projectKey=aviation-weather \
                    -Dsonar.sources=. \
                    -Dsonar.host.url=${SONAR_HOST_URL} \
                    -Dsonar.token=${SONAR_TOKEN} \
                    -Dsonar.go.coverage.reportPaths=coverage.out \
                    -Dsonar.exclusions=**/*_test.go,**/vendor/**

                    echo "‚úÖ SonarQube analysis complete!"
                '''
            }
        }

    }

    post {
        always {
            // Safety net: don't fail build if archiving/publishing fails
            catchError(buildResult: 'SUCCESS', stageResult: 'SUCCESS') {
                // Save coverage files as downloadable artifacts
                archiveArtifacts artifacts: 'coverage.out,coverage.txt,coverage.html', allowEmptyArchive: true

                // Publish HTML report for viewing directly in Jenkins
                publishHTML(target: [
                    allowMissing: true,
                    alwaysLinkToLastBuild: true,
                    keepAll: true,
                    reportDir: '.',
                    reportFiles: 'coverage.html',
                    reportName: 'Coverage Report'
                ])
            }
        }

        success {
            echo '‚úÖ Tests passed successfully!'
            echo 'üìä Check SonarQube dashboard at http://localhost:9000'
        }

        failure {
            echo '‚ùå Tests failed! Check console output for details.'
        }
    }
}
